<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Lc_0_Chess.Views.GameSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lc_0_Chess.Views"
        mc:Ignorable="d"
        Title="Sakura Chess - Настройка игры" Height="800" Width="1200"
        Style="{StaticResource DarkWindowStyle}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Цветовая схема Сакуры -->
        <SolidColorBrush x:Key="SakuraPink" Color="#FFB7C5"/>
        <SolidColorBrush x:Key="SakuraDarkPink" Color="#FF8DA1"/>
        <SolidColorBrush x:Key="SakuraAccent" Color="#FF4D67"/>
        <SolidColorBrush x:Key="SakuraLight" Color="#FFF0F3"/>
        <SolidColorBrush x:Key="SakuraText" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="SakuraSecondaryText" Color="#666666"/>

        <!-- Стиль для кнопок прокрутки страницы -->
        <Style x:Key="SakuraScrollBarPageButtonStyle" TargetType="{x:Type RepeatButton}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Rectangle Fill="{TemplateBinding Background}" Width="0" Height="0"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для полосы прокрутки -->
        <Style x:Key="SakuraScrollBarStyle" TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" Background="Transparent" SnapsToDevicePixels="true">
                            <Border x:Name="TrackBorder" 
                                    Background="#1AFFFFFF" 
                                    CornerRadius="6" 
                                    Margin="0,4"/>
                            <Track x:Name="PART_Track" 
                                   IsDirectionReversed="true" 
                                   Margin="0,4">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageUpCommand}" 
                                                Style="{StaticResource SakuraScrollBarPageButtonStyle}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                <Grid>
                                                    <!-- Outer glow -->
                                                    <Border x:Name="GlowBorder"
                                                            Background="{StaticResource SakuraPink}"
                                                            CornerRadius="6"
                                                            Margin="-2"
                                                            Opacity="0">
                                                        <Border.Effect>
                                                            <BlurEffect Radius="8"/>
                                                        </Border.Effect>
                                                    </Border>
                                                    <!-- Main thumb -->
                                                    <Border x:Name="ThumbBorder" 
                                                            Background="{StaticResource SakuraPink}" 
                                                            CornerRadius="6" 
                                                            Opacity="0.6"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="ThumbBorder"
                                                                                   Storyboard.TargetProperty="Opacity"
                                                                                   To="1" Duration="0:0:0.2"/>
                                                                    <DoubleAnimation Storyboard.TargetName="GlowBorder"
                                                                                   Storyboard.TargetProperty="Opacity"
                                                                                   To="0.5" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="ThumbBorder"
                                                                                   Storyboard.TargetProperty="Opacity"
                                                                                   To="0.6" Duration="0:0:0.2"/>
                                                                    <DoubleAnimation Storyboard.TargetName="GlowBorder"
                                                                                   Storyboard.TargetProperty="Opacity"
                                                                                   To="0" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter TargetName="ThumbBorder" Property="Background" Value="{StaticResource SakuraAccent}"/>
                                                        <Setter TargetName="GlowBorder" Property="Background" Value="{StaticResource SakuraAccent}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageDownCommand}"
                                                Style="{StaticResource SakuraScrollBarPageButtonStyle}"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sakura ScrollViewer Template -->
        <ControlTemplate x:Key="SakuraScrollViewerControlTemplate" TargetType="{x:Type ScrollViewer}">
            <Grid x:Name="Grid" Background="{TemplateBinding Background}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Rectangle x:Name="Corner" Grid.Column="1" Grid.Row="1" Fill="Transparent"/>
                <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" Grid.Column="0" Grid.Row="0" 
                                      Margin="{TemplateBinding Padding}" Content="{TemplateBinding Content}" 
                                      ContentTemplate="{TemplateBinding ContentTemplate}"/>
                <ScrollBar x:Name="PART_VerticalScrollBar" Grid.Column="1" Grid.Row="0" 
                          AutomationProperties.AutomationId="VerticalScrollBar" Cursor="Arrow" 
                          Maximum="{TemplateBinding ScrollableHeight}" 
                          Minimum="0" Orientation="Vertical" 
                          ViewportSize="{TemplateBinding ViewportHeight}" 
                          Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" 
                          Value="{TemplateBinding VerticalOffset}" 
                          Style="{StaticResource SakuraScrollBarStyle}"/>
            </Grid>
        </ControlTemplate>

        <!-- Анимация появления -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Стиль для карточек -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15"
                                    ShadowDepth="5"
                                    Opacity="0.2"
                                    Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для заголовков карточек -->
        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource SakuraPink}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Стиль для кнопок выбора времени -->
        <Style x:Key="TimeButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="#2D2D2D"
                                BorderBrush="{StaticResource SakuraPink}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="15"
                                Width="110" Height="110">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock x:Name="icon"
                                         Text="{TemplateBinding Tag}"
                                         FontSize="32"
                                         HorizontalAlignment="Center"
                                         Foreground="{StaticResource SakuraPink}"/>

                                <TextBlock Grid.Row="1"
                                         Text="{TemplateBinding Content}"
                                         FontSize="18"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Foreground="{StaticResource SakuraLight}"/>

                                <TextBlock Grid.Row="2"
                                         Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ToolTip}"
                                         Foreground="{StaticResource SakuraSecondaryText}"
                                         FontSize="12"
                                         HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SakuraAccent}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок выбора режима -->
        <Style x:Key="ModeButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="#2D2D2D"
                                BorderBrush="{StaticResource SakuraPink}"
                                BorderThickness="1"
                                CornerRadius="15"
                                Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{TemplateBinding Tag}"
                                         FontSize="24"
                                         Margin="0,0,15,0"
                                         VerticalAlignment="Center"
                                         Foreground="{StaticResource SakuraPink}"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{TemplateBinding Content}"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource SakuraLight}"/>
                                    <TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ToolTip}"
                                             Foreground="{StaticResource SakuraSecondaryText}"
                                             FontSize="12"
                                             Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SakuraAccent}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Border Background="#1A1A1A"
            CornerRadius="20"
            Margin="40">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Margin="40,30,40,20">
                <TextBlock Text="Настройка игры"
                         Foreground="{StaticResource SakuraPink}"
                         FontSize="42"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"/>
                <TextBlock Text="Настройте параметры игры перед началом партии"
                         Foreground="{StaticResource SakuraLight}"
                         FontSize="16"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Основное содержимое -->
            <ScrollViewer Grid.Row="1"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Disabled"
                        Margin="40,0,40,0"
                        Template="{StaticResource SakuraScrollViewerControlTemplate}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка -->
                    <StackPanel>
                        <!-- Режим игры -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Режим игры"
                                         Style="{StaticResource CardTitleStyle}"/>

                                <RadioButton x:Name="ClassicModeRadio"
                                           GroupName="Mode"
                                           Content="Классические шахматы"
                                           Tag="♟"
                                           ToolTip="Традиционная расстановка фигур"
                                           Style="{StaticResource ModeButtonStyle}"
                                           IsChecked="True"/>

                                <RadioButton x:Name="Chess960Radio"
                                           GroupName="Mode"
                                           Content="Шахматы 960"
                                           Tag="🎲"
                                           ToolTip="Случайная начальная позиция"
                                           Style="{StaticResource ModeButtonStyle}"/>
                            </StackPanel>
                        </Border>

                        <!-- Уровень сложности -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Уровень сложности"
                                         Style="{StaticResource CardTitleStyle}"/>

                                <RadioButton GroupName="Difficulty"
                                           Content="Начинающий"
                                           Tag="🌱"
                                           ToolTip="Время на ход: 1 секунда"
                                           Style="{StaticResource ModeButtonStyle}"
                                           IsChecked="True"
                                           Checked="DifficultyRadioButton_Checked"/>

                                <RadioButton GroupName="Difficulty"
                                           Content="Продвинутый"
                                           Tag="⚔"
                                           ToolTip="Время на ход: 3 секунды"
                                           Style="{StaticResource ModeButtonStyle}"
                                           Checked="DifficultyRadioButton_Checked"/>

                                <RadioButton GroupName="Difficulty"
                                           Content="Эксперт"
                                           Tag="👑"
                                           ToolTip="Время на ход: 5 секунд"
                                           Style="{StaticResource ModeButtonStyle}"
                                           Checked="DifficultyRadioButton_Checked"/>
                            </StackPanel>
                        </Border>

                        <!-- Контроль времени -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Контроль времени"
                                         Style="{StaticResource CardTitleStyle}"/>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Без лимита -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,25">
                                        <TextBlock Text="Без ограничений"
                                                 Foreground="{StaticResource SakuraSecondaryText}"
                                                 FontSize="14"
                                                 Margin="0,0,0,10"/>
                                        <WrapPanel HorizontalAlignment="Left">
                                            <RadioButton x:Name="NoLimitRadio"
                                                       GroupName="TimeControl"
                                                       Content="∞"
                                                       Tag="⌛"
                                                       ToolTip="Без лимита"
                                                       Style="{StaticResource TimeButtonStyle}"
                                                       IsChecked="True"
                                                       Margin="0,0,10,0"/>
                                        </WrapPanel>
                                    </StackPanel>

                                    <!-- Bullet -->
                                    <StackPanel Grid.Row="1" Margin="0,0,0,25">
                                        <TextBlock Text="Bullet"
                                                 Foreground="{StaticResource SakuraSecondaryText}"
                                                 FontSize="14"
                                                 Margin="0,0,0,10"/>
                                        <WrapPanel HorizontalAlignment="Left">
                                            <RadioButton x:Name="Bullet30SecRadio"
                                                       GroupName="TimeControl"
                                                       Content="30 сек"
                                                       Tag="⚡"
                                                       ToolTip="Bullet"
                                                       Style="{StaticResource TimeButtonStyle}"
                                                       Margin="0,0,10,10"/>

                                            <RadioButton x:Name="Bullet1MinRadio"
                                                       GroupName="TimeControl"
                                                       Content="1 мин"
                                                       Tag="⚡"
                                                       ToolTip="Bullet"
                                                       Style="{StaticResource TimeButtonStyle}"
                                                       Margin="0,0,10,10"/>

                                            <RadioButton x:Name="Bullet3MinRadio"
                                                       GroupName="TimeControl"
                                                       Content="3 мин"
                                                       Tag="⚡"
                                                       ToolTip="Bullet"
                                                       Style="{StaticResource TimeButtonStyle}"
                                                       Margin="0,0,10,10"/>
                                        </WrapPanel>
                                    </StackPanel>

                                    <!-- Blitz -->
                                    <StackPanel Grid.Row="2" Margin="0,0,0,25">
                                        <TextBlock Text="Blitz"
                                                 Foreground="{StaticResource SakuraSecondaryText}"
                                                 FontSize="14"
                                                 Margin="0,0,0,10"/>
                                        <WrapPanel HorizontalAlignment="Left">
                                            <RadioButton x:Name="Blitz5MinRadio"
                                                       GroupName="TimeControl"
                                                       Content="5 мин"
                                                       Tag="🗲"
                                                       ToolTip="Blitz"
                                                       Style="{StaticResource TimeButtonStyle}"
                                                       Margin="0,0,10,10"/>

                                            <RadioButton x:Name="Blitz10MinRadio"
                                                       GroupName="TimeControl"
                                                       Content="10 мин"
                                                       Tag="🗲"
                                                       ToolTip="Blitz"
                                                       Style="{StaticResource TimeButtonStyle}"
                                                       Margin="0,0,10,10"/>
                                        </WrapPanel>
                                    </StackPanel>

                                    <!-- Rapid и Classical -->
                                    <StackPanel Grid.Row="3">
                                        <TextBlock Text="Rapid и Classical"
                                                 Foreground="{StaticResource SakuraSecondaryText}"
                                                 FontSize="14"
                                                 Margin="0,0,0,10"/>
                                        <WrapPanel HorizontalAlignment="Left">
                                            <RadioButton x:Name="Rapid15MinRadio"
                                                       GroupName="TimeControl"
                                                       Content="15 мин"
                                                       Tag="⏱"
                                                       ToolTip="Rapid"
                                                       Style="{StaticResource TimeButtonStyle}"
                                                       Margin="0,0,10,10"/>

                                            <RadioButton x:Name="Rapid30MinRadio"
                                                       GroupName="TimeControl"
                                                       Content="30 мин"
                                                       Tag="⏱"
                                                       ToolTip="Rapid"
                                                       Style="{StaticResource TimeButtonStyle}"
                                                       Margin="0,0,10,10"/>

                                            <RadioButton x:Name="Classical60MinRadio"
                                                       GroupName="TimeControl"
                                                       Content="60 мин"
                                                       Tag="⌛"
                                                       ToolTip="Classical"
                                                       Style="{StaticResource TimeButtonStyle}"
                                                       Margin="0,0,10,10"/>
                                        </WrapPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Правая колонка -->
                    <StackPanel Grid.Column="1">
                        <!-- Выбор цвета -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Выбор цвета"
                                         Style="{StaticResource CardTitleStyle}"/>

                                <RadioButton x:Name="WhiteSideRadio"
                                           GroupName="Side"
                                           Content="Белые фигуры"
                                           Tag="♔"
                                           ToolTip="Первый ход в партии"
                                           Style="{StaticResource ModeButtonStyle}"
                                           IsChecked="True"/>

                                <RadioButton x:Name="BlackSideRadio"
                                           GroupName="Side"
                                           Content="Черные фигуры"
                                           Tag="♚"
                                           ToolTip="Ответ на первый ход"
                                           Style="{StaticResource ModeButtonStyle}"/>

                                <RadioButton x:Name="RandomSideRadio"
                                           GroupName="Side"
                                           Content="Случайный выбор"
                                           Tag="🎲"
                                           ToolTip="Игра за оба цвета"
                                           Style="{StaticResource ModeButtonStyle}"/>
                            </StackPanel>
                        </Border>

                        <!-- Превью доски -->
                        <Border Style="{StaticResource CardStyle}" MinHeight="500">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Превью доски"
                                         Style="{StaticResource CardTitleStyle}"
                                         Grid.Row="0"/>

                                <Border Grid.Row="1"
                                        Background="#2D2D2D"
                                        BorderBrush="{StaticResource SakuraPink}"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        Margin="0,10">
                                    <Viewbox Stretch="Uniform"
                                            Margin="20">
                                        <Grid x:Name="BoardPreview"
                                              Width="400"
                                              Height="400">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                        </Grid>
                                    </Viewbox>
                                </Border>

                                <TextBlock Grid.Row="2"
                                         Text="Подсказка: Выберите цвет фигур в секции 'Выбор цвета'"
                                         Foreground="{StaticResource SakuraSecondaryText}"
                                         FontSize="14"
                                         TextWrapping="Wrap"
                                         TextAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Кнопки управления -->
            <Grid Grid.Row="2" Margin="40,20,40,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="Отмена"
                        Style="{StaticResource DarkVolumetricButtonStyle}"
                        Width="150"
                        Height="50"
                        Click="CancelButton_Click"/>

                <Button Grid.Column="2"
                        Content="Начать игру"
                        Style="{StaticResource DarkVolumetricButtonStyle}"
                        Width="150"
                        Height="50"
                        Click="StartButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
