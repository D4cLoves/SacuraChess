<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Lc_0_Chess.Views.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lc_0_Chess.Views"
        mc:Ignorable="d"
        Title="Sakura Chess" Height="800" Width="1200"
        Style="{StaticResource DarkWindowStyle}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Цветовая схема -->
        <SolidColorBrush x:Key="SakuraPink" Color="#FFB7C5"/>
        <SolidColorBrush x:Key="SakuraDarkPink" Color="#FF8DA1"/>
        <SolidColorBrush x:Key="SakuraAccent" Color="#FF4D67"/>
        <SolidColorBrush x:Key="SakuraLight" Color="#FFF0F3"/>
        <SolidColorBrush x:Key="SakuraText" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="SakuraSecondaryText" Color="#666666"/>

        <!-- Стиль для карточек -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15"
                                    ShadowDepth="5"
                                    Opacity="0.2"
                                    Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок меню -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource SakuraLight}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SakuraPink}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="30,20"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15"
                                Padding="40,25">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#2D2D2D" Offset="0"/>
                                    <GradientStop Color="#252525" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                         Margin="0,0,15,0"
                                         VerticalAlignment="Center"
                                         FontSize="28"/>
                                <ContentPresenter Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#3D3D3D" Offset="0"/>
                                            <GradientStop Color="#353535" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SakuraAccent}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#252525" Offset="0"/>
                                            <GradientStop Color="#1E1E1E" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="#1A1A1A"
                CornerRadius="20"
                Margin="40">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0"
                           Margin="40,30,40,20"
                           Background="Transparent">
                    <TextBlock Text="🌸 Sakura Chess"
                             Foreground="{StaticResource SakuraPink}"
                             FontSize="64"
                             FontWeight="Bold"
                             HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="15"
                                            ShadowDepth="5"
                                            Opacity="0.3"
                                            Color="#FF4D67"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="с Leela Chess Zero"
                             Foreground="{StaticResource SakuraLight}"
                             FontSize="24"
                             HorizontalAlignment="Center"
                             Margin="0,10,0,0">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="10"
                                            ShadowDepth="3"
                                            Opacity="0.2"
                                            Color="#000000"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>

                <!-- Основное содержимое -->
                <Border Grid.Row="1"
                        Style="{StaticResource CardStyle}"
                        Width="450"
                        VerticalAlignment="Center"
                        Margin="40,0"
                        Padding="35">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#2D2D2D" Offset="0"/>
                            <GradientStop Color="#1E1E1E" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30"
                                        ShadowDepth="10"
                                        Opacity="0.3"
                                        Color="#000000"/>
                    </Border.Effect>
                    <StackPanel>
                        <Button Content="Новая игра"
                                Tag="♟"
                                Style="{StaticResource MenuButtonStyle}"
                                Click="NewGameButton_Click"
                                Margin="0,10,0,20">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                ShadowDepth="5"
                                                Opacity="0.3"
                                                Color="#000000"/>
                            </Button.Effect>
                        </Button>

                       

                        <Button Content="Выход"
                                Tag="🚪"
                                Style="{StaticResource MenuButtonStyle}"
                                Click="ExitButton_Click"
                                Margin="0,10,0,10">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                ShadowDepth="5"
                                                Opacity="0.3"
                                                Color="#000000"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Версия -->
                <StackPanel Grid.Row="2"
                           Margin="40,20,40,30"
                           HorizontalAlignment="Center"
                           Background="Transparent">
                    <TextBlock Text="Version 1.0"
                             Foreground="{StaticResource SakuraSecondaryText}"
                             FontSize="14"/>
                    <TextBlock Text="Разработано с ❤ для любителей шахмат"
                             Foreground="{StaticResource SakuraSecondaryText}"
                             FontSize="14"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
